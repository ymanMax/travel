.container{
  background: #fff;
}
.image-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
  align-items: center;
}

.image-wrapper {
  width: 210rpx;
  height: 210rpx;
  margin: 10rpx ;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: white;
  text-align: center;
  line-height: 40rpx;
  border-radius: 0 0 0 8rpx;
}

.add-btn {
  width: 210rpx;
  height: 210rpx;
  border: 2rpx dashed #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  margin: 10rpx;
  color: #999;
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #e64340;
  color: white;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.submit-btn:active{
  opacity: .6;
}
.form-container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input-field, .picker-text {
  padding: 0 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.picker-text.no_val{
  color: #757575;
}
.textarea-field {
  padding: 15rpx;
  width: calc(100% - 30rpx);
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  min-height: 200rpx;
  font-size: 28rpx;
}

.word-count {
  text-align: right;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}