.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
  border-radius: 10rpx;
}

/* 表单项容器 */
.form-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}

/* 标签样式 */
.form-item label {
  width: 100rpx;
  font-size: 28rpx;
  text-align: right;
  color: #000;
  margin-right: 20rpx;
}

/* 头像上传区域 */
.avatar-uploader {
  display: flex;
  align-items: center;
}

.avatar-uploader image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.upload-btn {
  margin: 0;
  background-color: #fef3f3;
  color: #e64340;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: 1px solid #e64340;
}

.upload-btn:active {
  background-color: #ffeceb;
}

/* 输入框通用样式 */
input {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

input:focus {
  border-color: #e64340;
  box-shadow: 0 0 8rpx rgba(230,67,64,0.2);
}

/* 单选框组样式 */
radio-group {
  display: flex;
  gap: 40rpx;
}

radio-group label {
  display: flex;
  align-items: center;
  color: #000;
  width: auto !important;
}

radio-group radio {
  /* margin-right: 10rpx; */
}

/* 重写radio选中颜色 */
radio .wx-radio-input.wx-radio-input-checked {
  border-color: #e64340 !important;
  background: #e64340 !important;
}

/* 日期选择器样式 */
.picker {
  color: #333;
  font-size: 28rpx;
}
.picker.no_val{
  color: #757575;
}

/* 提交按钮 */
.submit-btn {
  background: #e64340 !important;
  color: #fff;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  transition: all 0.3s;
  margin-top: 100rpx;
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 错误状态 */
.input-error {
  border-color: #ff4d4f !important;
  background: #fff2f0;
}