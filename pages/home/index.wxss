/* 公共样式 */
page {
  background: #f5f5f5;
  font-size: 28rpx;
}

/* 轮播图 */
.swiper {
  height: 400rpx;
}
.swiper-img {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  padding: 30rpx 0;
  background: #fff;
}
.entry-item {
  width: 25%;
  text-align: center;
}
.entry-icon {
  width: 80rpx;
  height: 80rpx;
}
.entry-text {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 双列布局 */
.double-column {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}
.big-column {
  width: 460rpx;
}
.big-column image {
  width: 460rpx;
  height: 460rpx;
}
.small-column {
  width: 220rpx;
}
.small-item image {
  width: 220rpx;
  height: 220rpx;
}
.column-img {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.img-desc {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 4rpx;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 标签切换 */
.tabs {
  display: flex;
  padding: 30rpx;
  background: #fff;
}
.tab-item {
  margin-right: 28rpx;
  color: #666;
  padding: 10rpx 0;
}
.tab-item.active {
  color: #e64340;
  border-bottom: 4rpx solid #e64340;
}

/* 列表项 */
.list-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border-bottom: 1px solid #eee;
}
.item-img {
  width: 40%;
  height: 200rpx;
}
.item-content {
  width: 60%;
  padding-left: 20rpx;
}
.item-title {
  font-size: 32rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 18rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
.list-container{
  padding-bottom: 80rpx;
}
