/* 轮播图 */
.swiper {
  margin: 24rpx 0;
  height: 300rpx;
  overflow: hidden;
  border-radius: 12rpx;
}
.swiper-img {
  width: 100%;
  padding: 0 24rpx;
}
.waterfall-container {
  border-radius: 10rpx;
}
.swiper_box {
  background: #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.swiper_descp {
  left: 24rpx;
  bottom: 0;
  width: calc(100% - 48rpx);
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  background: rgba(0, 0, 0, 0.3);
}
.top_box {
  overflow: hidden;
  border-radius: 12rpx;
}
.strategy-item {
  display: flex;
  padding: 24rpx;
  background: #fff;
  justify-content: space-between;
  border-top: 1px solid #eee;
}

.strategy-image {
  width: 30%;
  height: 150rpx;
  border-radius: 10rpx;
}

.strategy-description {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
