.container {
  padding: 20rpx;
  background: #fff;
}
.create_box{
  top: 30rpx;
  right: 30rpx;
  background: #e64340;
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  z-index: 99999;
}
.post-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1px solid #eee;
}

.info {
  font-size: 24rpx;
  margin-left: 20rpx;
}
.info view:last-child{
  margin-top: 8rpx;
  font-size: 22rpx;
}
.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

.date {
  font-size: 28rpx;
  color: #999;
}

.description {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 18rpx;
  color: #4a4a4a;
  background: #f7f7f7;
  border-radius: 10rpx;
  padding: 16rpx;
}
.description textarea{
  transition: .2s;
}
.images {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 16rpx 16rpx 0;
  object-fit: cover;
}

.image1{
  width: 100%;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.button {
  margin-left: 30rpx;
}

.button image {
  width: 40rpx;
  height: 40rpx;
}

.button text {
  margin-top: 4rpx;
  font-size: 24rpx;
}

.comments {
  margin-top: 20rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 10rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: bold;
}

.comment-content {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.input-area {
  margin-top: 20rpx;
}

input {
  width: 100%;
  padding: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

button {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.post-separator {
  border-bottom: 1px solid #ddd;
  margin-bottom: 20rpx;
}
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  height: 50rpx;
  background-color: #f8f8f8;
}
.comment-input-container {
  margin-top: 10px;
  display: flex;
  align-items: flex-end;
}

.comment-input-container textarea {
  flex: 1;
  margin-right: 20rpx;
  padding: 5px;
  height: 160rpx;
  border: 1px solid #ccc;
  border-radius: 12rpx;
}

.comment-input-container button {
  padding: 0 10px;
  background-color: #e64340;
  color: white;
  border: none;
  line-height: 50rpx;
  border-radius: 3px;
}